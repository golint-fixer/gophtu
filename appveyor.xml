version: "{build}"
 
os: Windows Server 2012 R2
 
clone_folder: c:\projects\src\github.com\pblaszczyk\gophtu
 
environment:
 GOPATH: c:\projects
 
install:
 - set PATH=%GOPATH%\bin;%PATH%
 - cd %APPVEYOR_BUILD_FOLDER%
 - go version
 - go get code.google.com/p/go.tools/cmd/vet
 - go get github.com/golang/lint/golint
 - go get -v -t ./...
 
build_script:
 - go tool vet -all .
 - golint .
 - go build ./...
 - go test -race -v ./...
 
test: off
 
deploy: off
